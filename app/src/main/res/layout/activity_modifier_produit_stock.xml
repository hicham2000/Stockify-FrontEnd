<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gestion_Produit.AjouterProduit_ListeProduit"
    android:background="@color/vert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/appBarAjout">

        <androidx.appcompat.widget.Toolbar


            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/toolbar_back_button_ajout"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/fleche"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/ajout_prod"
                android:textColor="@color/white"
                android:textSize="20sp" />




        </androidx.appcompat.widget.Toolbar>


        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/appBarAjout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:background="@drawable/rond_image"
                android:id="@+id/imageProfil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profil"
                android:layout_gravity="center"

                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                >


                <TextView
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:text="Nom"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dimenTexte"
                    />

                <EditText
                    android:id="@+id/editTexte_t"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ellipse"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"

                >

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:text="Quantite"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimenTexte"


                    />

                <EditText
                    android:id="@+id/quant_ajoutModif"
                    android:layout_width="120dp"
                    android:layout_height="40dp"

                    android:paddingLeft="10dp"
                    style="@style/EditTextStyle"
                    android:inputType="numberDecimal"

                    android:gravity="center"
                    android:layout_marginLeft="10dp"

                    android:background="@drawable/ellipse"/>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="40dp"

                    android:layout_marginLeft="10dp"

                    android:background="@drawable/ellipse"
                    >


                    <Spinner



                        android:id="@+id/spinner_poid_ajoutModif1"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:padding="4dp"

                        style="@style/EditTextStyle"
                        android:entries="@array/poids"


                        />


                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                >


                <TextView
                    android:layout_width="102dp"
                    android:layout_height="match_parent"
                    android:text="Categorie"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/dimenTexte"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:layout_marginLeft="6dp"
                    android:background="@drawable/ellipse"
                    android:layout_marginRight="10dp"
                    >


                    <Spinner



                        android:id="@+id/spinner_categorie"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:padding="10dp"
                        style="@style/EditTextStyle"
                        android:entries="@array/poids"


                        />


                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"

                >
                <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Prix"
                    android:textSize="@dimen/dimenTexte"


                    />

                <EditText
                    android:id="@+id/Prix_produit"
                    android:layout_width="120dp"
                    android:layout_height="40dp"

                    android:paddingLeft="10dp"
                    style="@style/EditTextStyle"
                    android:inputType="numberDecimal"

                    android:gravity="center"
                    android:layout_marginLeft="10dp"

                    android:background="@drawable/ellipse"/>




                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dimenTexte"
                    android:text="DHS"
                    android:textSize="@dimen/dimenTexte"


                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"

                >
                <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="PÃ©remtion"
                    android:textSize="@dimen/dimenTexte"


                    />

                <LinearLayout
                    android:id="@+id/peremtionDateProduit"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ellipse"





                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/peremtiontextproduit"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"




                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendrier"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"

                >
                <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Alerte"
                    android:textSize="@dimen/dimenTexte"


                    />

                <LinearLayout
                    android:id="@+id/AlerteProd"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@drawable/ellipse"





                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/alertetextproduit"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"

                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"




                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendrier"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"

                >

                <TextView
                    android:layout_width="102dp"
                    android:layout_height="wrap_content"
                    android:text="Quantite Critique"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimenTexte"


                    />

                <EditText
                    android:id="@+id/quantiteCritique"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"

                    android:paddingLeft="10dp"
                    style="@style/EditTextStyle"
                    android:inputType="numberDecimal"

                    android:gravity="center"
                    android:layout_marginLeft="10dp"

                    android:background="@drawable/ellipse"/>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="40dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/ellipse"
                    >


                    <Spinner



                        android:id="@+id/spinnerquantitecriti"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:padding="4dp"

                        style="@style/EditTextStyle"
                        android:entries="@array/poids"


                        />


                </RelativeLayout>
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:layout_marginBottom="200dp">

                <Button
                    android:id="@+id/button_annulerprod"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    android:text="Annuler"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/button_validerProd"
                    android:layout_width="140dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:text="Valider" />

            </LinearLayout>




        </LinearLayout>


    </ScrollView>


</RelativeLayout>