<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Repas.ViewRepas"
android:background="@color/vert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/appBarviewrepas"
        android:background="@color/vertTexte">

        <androidx.appcompat.widget.Toolbar


            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/toolbar_back_button_updaterepas1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/fleche"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Afficher Repas"
                android:textColor="@color/white"
                android:textSize="20sp" />




        </androidx.appcompat.widget.Toolbar>


        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

    </LinearLayout>

<com.google.android.material.appbar.AppBarLayout
    android:layout_width="0dp"
    android:visibility="invisible"
    android:layout_height="0dp"
    android:id="@+id/appBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <!-- Ajoutez une flèche de retour à la Toolbar -->

        <ImageView
            android:id="@+id/toolbar_back_button_view_repas1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fleche"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"/>

        <com.google.android.material.appbar.MaterialToolbar

            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Repas"
            app:menu="@menu/menu_profil"
            />

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>



<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/androidx_window"
    android:layout_width="0dp"

    android:visibility="invisible"
    android:layout_height="0dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"

    android:background="@color/vertTexte"
    app:menu="@menu/menu_bottom_navigation"
    app:labelVisibilityMode="auto"
    app:itemIconTint="@color/white"
    app:itemTextColor="@color/white"
    app:itemBackground="@null"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/appBarviewrepas"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageProfil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/rond_image"
                android:src="@drawable/profil"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/enHaut"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Nom"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/editTexte_t"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ellipse"


                        />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/enHaut"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Categorie"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/cat"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ellipse"


                        />


                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"


                android:text="@string/ingredient"

                />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"></LinearLayout>

            <Button
                android:id="@+id/fg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"


                android:text="Date"


                />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="Péremtion"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <LinearLayout
                    android:id="@+id/peremtion"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ellipse"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"

                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/peremtiontext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="4dp"
                        android:inputType="none"
                        android:textColor="@color/black"


                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/calendrier" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="Alert"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp" />

                <LinearLayout
                    android:id="@+id/alert"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ellipse"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"

                    android:paddingBottom="15dp">

                    <TextView
                        android:id="@+id/alertt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="4dp"
                        android:inputType="none"
                        android:textColor="@color/black"


                        />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/calendrier" />

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="200dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_supprimer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Supprimer" />

                <Button
                    android:id="@+id/button_Editerr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Editer" />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>