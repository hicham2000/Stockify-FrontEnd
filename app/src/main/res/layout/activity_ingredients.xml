<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Repas.ingredients"
android:orientation="vertical"
android:background="@color/vert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/appBarAjout"
        android:background="@color/vertTexte">

        <androidx.appcompat.widget.Toolbar


            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/toolbar_back_button_ingredient"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/fleche"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Ingredient"
                android:textColor="@color/white"
                android:textSize="20sp" />




        </androidx.appcompat.widget.Toolbar>


        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

    </LinearLayout>

<androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="invisible"
    android:background="?attr/colorPrimary">

    <!-- Ajoutez une flèche de retour à la Toolbar -->

    <com.google.android.material.appbar.MaterialToolbar

        style="@style/Widget.MaterialComponents.Toolbar.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/ingredient"
        app:menu="@menu/menu_profil"
        />

</androidx.appcompat.widget.Toolbar>
    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:visibility="invisible"
        android:id="@+id/androidx_window_course"
        android:layout_width="0dp"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:background="@color/vertTexte"
        app:menu="@menu/menu_bottom_navigation"/>

    <android.widget.SearchView
        android:id="@+id/searchingredient"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/ellipse_menu"
        android:layout_centerHorizontal="true"
        />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/searchingredient"

            >



            <ListView
                android:id="@+id/myListViewingredient"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:paddingBottom="20dp"/>


            <Button
                android:id="@+id/ajouteringredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ellipse_menu"
                android:text="Suivant"
                android:layout_gravity="center"
                android:textColor="@color/white" />










        </LinearLayout>








</RelativeLayout>