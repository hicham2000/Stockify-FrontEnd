<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"

    >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

                <CheckBox
                    android:id="@+id/checkBoxrepas"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/hubballi_regular"
                    android:paddingLeft="10dp"
                    android:text="@string/item"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/ellipseR"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="47dp"
                    android:src="@drawable/ellipser" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


                <Button
                    android:id="@+id/buttonrecuprepas"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/recuperer"
                    android:backgroundTint="@color/recuperercorbeille"
                    android:fontFamily="@font/hubballi_regular"
                    android:paddingLeft="8dp"
                    android:text="@string/recuperer"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonsuppprepas"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/deletewhite"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="6dp"
                    android:text="@string/supprimer"
                    android:backgroundTint="@color/supprimercorbeille"
                    android:fontFamily="@font/hubballi_regular"
                    android:textSize="20dp"
                    />

        </LinearLayout>







</LinearLayout>
