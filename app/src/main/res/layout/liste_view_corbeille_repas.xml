<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/itemlistview"
    >

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            >

                <TextView
                    android:id="@+id/textViewR"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/hubballi_regular"
                    android:paddingLeft="10dp"
                    android:text="@string/item"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <ImageView
                    android:id="@+id/ellipseG"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ellipseg"
                    android:layout_marginTop="2dp"
                    android:visibility="invisible"/>


                <ImageView
                    android:id="@+id/ellipseR"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ellipser"
                    android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="7dp">


                <Button
                    android:id="@+id/buttonrecuprepas"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:drawableLeft="@drawable/recuperer"
                    android:backgroundTint="@color/recuperercorbeille"
                    android:fontFamily="@font/hubballi_regular"
                    android:paddingLeft="8dp"
                    android:text="@string/recuperer"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonsuppprepas"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/deletewhite"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="6dp"
                    android:text="@string/supprimer"
                    android:backgroundTint="@color/supprimercorbeille"
                    android:fontFamily="@font/hubballi_regular"
                    android:textSize="20dp"
                    />

        </LinearLayout>







</LinearLayout>
