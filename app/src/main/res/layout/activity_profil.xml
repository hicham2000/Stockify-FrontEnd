<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:background="@color/vert">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/imageProfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profil"
            android:layout_gravity="center"

            />
        <TextView
            android:id="@+id/nomProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile1"
            android:textColor="@color/vertTexte"
            android:textSize="@dimen/enHaut"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/emailProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="profile1@gmail.com"
            android:textColor="@color/vertTexte"
            android:textSize="@dimen/enHaut"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/enHaut"
            android:layout_marginLeft="15dp"
            >
        <Spinner

            android:id="@+id/spinner_gender"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/ellipse"
            android:entries="@array/genre"
            />

            <LinearLayout
                android:id="@+id/date_naissance"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/ellipse"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"

                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/dateNaissance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"



                    />
          <ImageView
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:src="@drawable/calendrier"
              android:layout_marginLeft="3dp"
              android:layout_marginTop="3dp"/>






            </LinearLayout>








        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="Taille"


                android:layout_gravity=""

                android:gravity="center"
                android:background="@drawable/ellipse"/>

            <Spinner

                android:layout_marginLeft="10dp"
                android:id="@+id/spinner_taille"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:background="@drawable/ellipse"
                android:entries="@array/taille"




                />

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                >
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:text="Poids"


                    android:layout_gravity=""

                    android:gravity="center"
                    android:background="@drawable/ellipse"/>

                <Spinner


                    android:layout_marginLeft="10dp"
                    android:id="@+id/spinner_poids"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:background="@drawable/ellipse"
                    android:entries="@array/poids"




                    />

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:layout_marginTop="@dimen/enHaut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/enHaut"
            android:text="@string/password"
            android:textColor="@color/vertTexte"
            android:layout_gravity="center"

            />




        <TextView
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimenTexte"
            android:text="@string/reussite"
            android:textColor="@color/vertTexte"

            android:layout_gravity="center"/>



       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="10dp"
           android:layout_gravity="center"

           >

           <TextView
               android:layout_width="@dimen/rond"
               android:layout_height="@dimen/rond"
               android:text="50"


               android:textColor="@color/vertTexte"

               android:textStyle="bold"
               android:gravity="center"
               android:background="@drawable/sphere"/>

           <TextView
               android:layout_width="@dimen/rond"
               android:layout_height="@dimen/rond"
               android:text="0,0"
               android:textStyle="bold"
               android:layout_marginLeft="@dimen/enHaut"
               android:textColor="@color/vertTexte"
               android:gravity="center"
               android:background="@drawable/sphere"/>



           <TextView
               android:layout_width="@dimen/rond"
               android:layout_height="@dimen/rond"
               android:text="0 mad"
               android:textColor="@color/vertTexte"
               android:layout_marginLeft="@dimen/enHaut"

               android:textStyle="bold"
               android:layout_gravity=""
               android:gravity="center"
               android:background="@drawable/sphere"/>


       </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/produit_en_cuisine"
                android:layout_marginLeft="24dp"
                android:textColor="@color/white"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:textColor="@color/white"
                android:text="@string/Kg_jetes"
                android:layout_marginLeft="32dp"

                android:gravity="center"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/economies"


                android:textColor="@color/white"
                android:layout_marginLeft="50dp"

                android:layout_gravity=""

                android:gravity="center"
                />


        </LinearLayout>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimenTexte"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/enHaut"
            android:text="@string/regime_speciaux"
            android:textColor="@color/vertTexte"/>



        <Spinner
            android:id="@+id/spinner_regime"
            android:layout_marginTop="@dimen/enHaut"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            style="@style/SpinnerStyle"
            android:entries="@array/regime_speciaux"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimenTexte"
           android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/enHaut"
            android:text="@string/affichage_quantites"
            android:textColor="@color/vertTexte"/>

        <!-- res/layout/activity_main.xml -->
        <!-- res/layout/activity_main.xml -->
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/enHaut"
            android:layout_marginTop="@dimen/enHaut">

            <RadioButton
                android:id="@+id/radioButtonMetric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vertTexte"

                android:text="Métrique"/>

            <RadioButton
                android:id="@+id/radioButtonImperial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/vertTexte"
                android:text="Impérial"
                android:shadowColor="@color/vertTexte"
                />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimenTexte"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/enHaut"
            android:text="@string/device"
            android:textColor="@color/vertTexte"/>

        <Spinner
            android:id="@+id/devise"
            android:layout_marginTop="@dimen/enHaut"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/ellipse"
            android:entries="@array/devise"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimenTexte"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/enHaut"
            android:text="@string/Personnalisation"
            android:textColor="@color/vertTexte"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"

                android:text="@string/mode_sportif"
                android:textColor="@color/white"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="250dp"
                android:layout_height="40dp"

                android:layout_marginLeft="15dp"

                android:text="@string/device2"
                android:textColor="@color/white"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:shadowColor="@color/vertTexte"
                />



        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimenTexte"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/enHaut"
        android:text="@string/notification"
        android:textColor="@color/vertTexte"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"

            android:text="@string/notification1"
            android:textColor="@color/white"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="107dp"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"

            android:layout_marginLeft="15dp"

            android:text="@string/notification2"
            android:textColor="@color/white"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:shadowColor="@color/vertTexte"
            />

    </LinearLayout>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            />
    </LinearLayout>




</ScrollView>