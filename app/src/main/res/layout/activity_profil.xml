                android:id="@+id/spinner_taille"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:padding="10dp"
                android:background="@drawable/ellipse"
                android:entries="@array/taille"




                />

        </LinearLayout>

            <LinearLayout
