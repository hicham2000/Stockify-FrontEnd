<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomeActivity"
    android:background="#083D27">



    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:id="@+id/appBarStock"
        tools:ignore="MissingConstraints">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarStock"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Stock"

            app:menu="@menu/menu_profil"
            />


    </com.google.android.material.appbar.AppBarLayout>





    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarStock2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarStock"
        tools:ignore="MissingConstraints">

        <android.widget.SearchView
            android:id="@+id/search_course"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ellipse"
            android:queryHint="chercherProd"
            tools:ignore="MissingConstraints"
            android:layout_marginLeft="55dp"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="88dp" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/androidx_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#7AAD45"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu_bottom_navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp" />



    <GridView
        android:id="@+id/gridV"
        android:layout_marginTop="99dp"
        android:layout_width="363dp"
        android:layout_height="356dp"
        android:numColumns="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarStock2"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/list_Button"
        android:layout_width="177dp"
        android:layout_height="173dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/plusImageView"
        app:layout_constraintEnd_toEndOf="@+id/plusImageView"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:text="Ajouter Produit" />

        <Button
            android:id="@+id/button2"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:text="Ajouter Repas" />

        <Button
            android:id="@+id/button3"
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:text="Scan" />
    </LinearLayout>

    <ImageView
        android:id="@+id/plusImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@drawable/plusimg"
        app:layout_constraintBottom_toTopOf="@+id/androidx_window"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/xImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:src="@drawable/xred_button"
        app:layout_constraintBottom_toTopOf="@+id/androidx_window"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="97dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbarStock2"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints"
        >
        <Button
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Produit" />
        <Button
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Repas" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>