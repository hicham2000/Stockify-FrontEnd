<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilActivity"
    android:background="@color/vert">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary">

            <!-- Ajoutez une flèche de retour à la Toolbar -->
            <ImageView
                android:id="@+id/toolbar_back_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/fleche"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                />

            <com.google.android.material.appbar.MaterialToolbar

                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Repas"
                app:menu="@menu/menu_profil"
                />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/androidx_window"
        android:layout_width="350dp"

        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ellipse_menu"
        app:menu="@menu/menu_bottom_navigation"
        app:labelVisibilityMode="auto"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:itemBackground="@null"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/appBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:background="@drawable/rond_image"
                android:id="@+id/imageProfil"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/profil"
                android:layout_gravity="center"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/enHaut"
                android:layout_marginLeft="15dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:text="Nom"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/editTexte_t"
                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ellipse"
                        android:focusableInTouchMode="false"


                        android:inputType="numberDecimal" />


                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/enHaut"
                android:layout_marginLeft="15dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    >
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:text="Nom"
                        android:textColor="#FFFFFF"
                        android:textSize="25dp"
                        android:gravity="center"/>

                    <EditText

                        style="@style/EditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="180dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/ellipse"
                        android:focusableInTouchMode="false"


                        android:inputType="numberDecimal" />


                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/button_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ingredient"


                android:layout_marginTop="40dp"

                />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>