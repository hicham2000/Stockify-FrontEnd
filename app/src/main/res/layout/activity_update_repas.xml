<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Repas.UpdateRepas"
android:background="@color/vert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/appBarUpdaterepa"
        android:background="@color/vertTexte">

        <androidx.appcompat.widget.Toolbar


            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/toolbar_back_button_updaterepas"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:src="@drawable/fleche"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Modifier Repas"
                android:textColor="@color/white"
                android:textSize="20sp" />




        </androidx.appcompat.widget.Toolbar>


        <View

            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white" />

    </LinearLayout>
<com.google.android.material.appbar.AppBarLayout
    android:visibility="invisible"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:id="@+id/appBar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <!-- Ajoutez une flèche de retour à la Toolbar -->
        <ImageView
            android:id="@+id/toolbar_back_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fleche"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            />

        <com.google.android.material.appbar.MaterialToolbar

            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Repas"
            app:menu="@menu/menu_profil"
            />

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>



<com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/androidx_window"
    android:layout_width="0dp"

    android:visibility="invisible"
    android:layout_height="0dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"

    android:background="@color/vertTexte"
    app:menu="@menu/menu_bottom_navigation"
    app:labelVisibilityMode="auto"
    app:itemIconTint="@color/white"
    app:itemTextColor="@color/white"
    app:itemBackground="@null"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_below="@+id/appBarUpdaterepa">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <ImageView
            android:background="@drawable/rond_image"
            android:id="@+id/imageProfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/meal"
            android:layout_gravity="center"

            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/enHaut"
            android:layout_marginLeft="15dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:text="Nom"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/editTexte_tupdtae"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ellipse"

                    />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/enHaut"
            android:layout_marginLeft="15dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                >
                <TextView
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:text="Categorie"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:gravity="center"/>

                <Spinner
                    android:id="@+id/spinner_options"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="185dp"

                    android:background="@drawable/ellipse"
                    android:gravity="center"
                    />


            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ingredient"


            android:layout_marginTop="40dp"

            />

        <LinearLayout
            android:id="@+id/containerupdtae"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
        </LinearLayout>
        <Button
            android:id="@+id/fg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Date"


            android:layout_marginTop="20dp"


            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Péremtion"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/peremtion"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/ellipse"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:layout_marginStart="200dp"

                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/peremtiontextupdtae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"




                    />

                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/calendrier" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Alert"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:gravity="center"/>

            <LinearLayout
                android:id="@+id/alert"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:background="@drawable/ellipse"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:layout_marginStart="200dp"

                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:id="@+id/alerttUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"




                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/calendrier"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="3dp"/>

            </LinearLayout>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="200dp">



            <Button
                android:id="@+id/button_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update" />

        </LinearLayout>




    </LinearLayout>


</ScrollView>


</RelativeLayout>