<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Stockifi" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/vertTexte</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Autres attributs du style si nÃ©cessaire -->
        <item name="searchIcon">@drawable/ic_search_custom</item>
        <item name="colorPrimary">@color/white</item>
    </style>


    <style name="Theme.Stockifi" parent="Base.Theme.Stockifi" />
    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">#ACB7B6</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@color/vertTexte</item> <!-- Remplacez #00FF00 par le code couleur de votre choix (vert dans cet exemple) -->
    </style>
    <style name="EditTextStyle">
        <!-- Couleur du texte du curseur -->
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:textSelectHandle">@drawable/custom_cursor_handle</item>

    </style>

    <!-- res/values/styles.xml -->
    <style name="RadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/custom_radio_button</item>
    </style>

    <style name="RadioButtonText" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:textColor">#FFFFFF</item> <!-- Couleur du texte (blanc dans cet exemple) -->
    </style>
    <style name="edit">
        <item name="android:background">@color/white</item> <!-- Remplacez #00FF00 par le code couleur de votre choix (vert dans cet exemple) -->
    </style>
</resources>